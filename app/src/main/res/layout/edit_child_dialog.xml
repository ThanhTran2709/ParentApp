<?xml version="1.0" encoding="utf-8"?>
<!-- https://stackoverflow.com/questions/36789561/how-to-create-custom-dialog-box-with-two-button-in-android-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="165dp"
            android:layout_gravity="center"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="15dp"
            android:backgroundTint="#FFFFFF"
            android:background="@color/white">

            <EditText
                android:id="@+id/childNameEditText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:hint="Enter child name"
                android:backgroundTint="@android:color/darker_gray"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                android:fontFamily="@font/moon_bold_font"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/moon_bold_font"
                android:gravity="center"
                android:text="Edit child name"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frmNo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="75dp"
        android:layout_marginTop="75dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cancelfab2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_round_close_24"
            android:tint="@color/white"
            app:backgroundTint="@android:color/holo_red_light"
            app:fabCustomSize="60dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frmOk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="75dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addfab2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_round_check_24"
            android:tint="@color/white"
            app:backgroundTint="@android:color/holo_green_light"
            app:fabCustomSize="60dp" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/frmDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="90dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/deletefab2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_round_delete_24"
            android:tint="@color/white"
            app:backgroundTint="@android:color/darker_gray"
            app:fabCustomSize="60dp" />


    </FrameLayout>

</FrameLayout>